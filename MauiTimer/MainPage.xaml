<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiTimer.MainPage">

    <VerticalStackLayout>
        <Label x:Name="label" 
               BackgroundColor="Transparent"
               WidthRequest="300"
               FontSize="30" 
               HorizontalTextAlignment="Center"
               HorizontalOptions="Center" 
               VerticalOptions="Center"/>
        <AbsoluteLayout HorizontalOptions="Center" VerticalOptions="Center">
            
            <Ellipse
                WidthRequest="100"
                HeightRequest="100"
                Fill="Transparent"
                StrokeThickness="2"
                Stroke="Black"
                TranslationY="30"/>
            
            <Line
                Stroke="Black"
                X1="50"
                Y1="30"
                X2="50"
                Y2="40"/>
            
             <Line
                Stroke="Black"
                X1="100"
                Y1="80"
                X2="90"
                Y2="80"/>
            
             <Line
                Stroke="Black"
                X1="50"
                Y1="130"
                X2="50"
                Y2="120"/>

            <Line
                Stroke="Black"
                X1="0"
                Y1="80"
                X2="10"
                Y2="80"/>

            <Rectangle
                x:Name="secondLine"
                Fill="Black"
                AnchorX="0"
                AnchorY="0"
                AbsoluteLayout.LayoutBounds="50, 80, 2, 50"
                />
            
            <Rectangle
                x:Name="minuteLine"
                Fill="Black"
                AnchorX="0"
                AnchorY="0"
                AbsoluteLayout.LayoutBounds="50, 80, 2, 30"
                />

            <Rectangle
                x:Name="hourLine"
                Fill="Red"
                AnchorX="0"
                AnchorY="0"
                AbsoluteLayout.LayoutBounds="50, 80, 3, 20"
                />
            
        </AbsoluteLayout>
        
    </VerticalStackLayout>
    

</ContentPage>
